{
  "name": "prompt-saver",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "sst build",
    "console": "sst console",
    "deploy:dev": "sst deploy --stage dev",
    "deploy:prod": "sst deploy --stage production",
    "dev": "sst dev",
    "remove": "sst remove",
    "sso": "aws sso login --sso-session=prompt-saver",
    "typecheck": "tsc --noEmit",
    "desktop:env": "node scripts/generate-desktop-env.mjs",
    "desktop:dev": "sst shell -- node scripts/extract-sst-env.mjs && pnpm --filter @prompt-saver/desktop dev",
    "desktop:dev:fallback": "pnpm run desktop:env && pnpm --filter @prompt-saver/desktop dev",
    "desktop:typecheck": "sst shell -- pnpm --filter @prompt-saver/desktop typecheck",
    "desktop:build": "pnpm run desktop:env && pnpm --filter @prompt-saver/desktop build",
    "chrome:dev": "pnpm --filter @prompt-saver/chrome-plugin dev",
    "chrome:build": "pnpm --filter @prompt-saver/chrome-plugin build"
  },
  "dependencies": {
    "@eslint/js": "^9.23.0",
    "@soniox/speech-to-text-web": "^1.2.0",
    "eslint": "^9.23.0",
    "lucide-react": "^0.545.0",
    "openai": "^6.2.0",
    "prosemirror-model": "^1.25.3",
    "replicache": "^15.3.0",
    "sst": "^3.9.2",
    "typescript-eslint": "^8.27.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/aws-lambda": "8.10.145",
    "@types/react": "19",
    "@types/react-dom": "19",
    "electron": "31.0.2",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.8.2"
  },
  "resolutions": {
    "drizzle-orm": "0.38.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
