{
  "extends": "../../tsconfig.json",
  "include": [
    "sst-env.d.ts",
    "../../sst-env.d.ts",
    "electron.vite.config.ts",
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/**/*.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "composite": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "types": ["electron", "node"],
    "baseUrl": ".",
    "paths": {
      "@desktop/*": ["./src/renderer/src/*"],
      "@renderer/*": ["./src/renderer/src/*"],
      "@/*": ["./src/renderer/src/*"],
      "@prompt-saver/core/*": ["../core/src/*"],
      "@prompt-saver/functions/*": ["../functions/src/*"]
    }
  }
}
